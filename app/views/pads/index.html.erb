<table class="table">
  <thead>
    <tr>
      <th>Heading</th>
      <th>Price</th>
      <th>Timestamp</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pads.each do |pad| %>
      <tr>
        <td><%= pad.heading %></td>
        <td><%= number_to_currency(pad.price, precision: 0) %></td>
        <td><%= pad.timestamp.localtime %></td>
        <td><%= link_to pad.external_url, pad.external_url %></td>
        <td><%= link_to 'Show', pad %></td>
        <td><%= link_to 'Edit', edit_pad_path(pad) %></td>
        <td><%= link_to 'Destroy', pad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @pads, renderer: BootstrapPagination::Rails %>

<br>

<%= link_to 'New Pad', new_pad_path %>
